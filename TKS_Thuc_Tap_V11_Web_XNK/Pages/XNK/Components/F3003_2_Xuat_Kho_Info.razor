@using TKS_Thuc_Tap_V11_Data_Access.Controller.XNK
@using TKS_Thuc_Tap_V11_Data_Access.Entity.XNK
@inherits FBase_Info;

<div class="modal fade show" tabindex="-1" role="dialog" aria-hidden="true" style="display: block; padding-left: 0px; background-color: rgba(10, 10, 10, .8);">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header bg-light">
				<ul class="nav nav-pills card-header-pills" role="tablist">
					<li class="nav-item" role="presentation">
						<a class="nav-link active" data-bs-toggle="tab" href="#thongtin" role="tab" aria-selected="true">
							@Get_Language_Data_Field("Thông tin")
						</a>
					</li>

					<li class="nav-item" role="presentation">
						<a class="nav-link" data-bs-toggle="tab" href="#record_action_history" role="tab" aria-selected="false" tabindex="-1">
							@Get_Language_Data_Field("Lịch sử xử lý")
						</a>
					</li>
				</ul>

				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="@(()=> Modal_Cancel())">
				</button>
			</div>

			@((MarkupString)r_strError)


			<EditForm Model="@m_objXuat_Kho">
				<div class="modal-body">
					<div class="tab-content">
						<div class="tab-pane active show" id="thongtin" role="tabpanel">
							<div class="row">
							<div class="col-lg-6">
								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("ID")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.Auto_ID, true)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Số phiếu xuất kho")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.So_Phieu_Xuat_Kho, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Ngày xuất kho")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.Ngay_Xuat_Kho, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Ghi chú")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.Ghi_Chu, false)</span>
									</div>
								</div>

							</div>

							<div class="col-lg-6">
								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Ngày giờ tạo")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.Created, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Người tạo")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.Created_By, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Chức năng tạo")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.Created_By_Function, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Ngày giờ cập nhật sau cùng")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.Last_Updated, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Người cập nhật sau cùng")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.Last_Updated_By, false)</span>
									</div>
								</div>

								<div class="row mb-3">
									<div class="col-lg-11">
										<label class="form-label-info">@Get_Language_Data_Field("Chức năng cập nhật sau cùng")</label><br />
										<span class="form-label">@CUtility.Get_Label_Text(@m_objXuat_Kho.Last_Updated_By_Function, false)</span>
									</div>
								</div>

							</div>

							</div>
						</div>

						<TelerikGrid Data="@m_arrXuat_Kho_Raw_Data" Height="calc(100vh - 470px)" Resizable="true" Reorderable="true" @ref="@m_grdData">
							<GridExport>
								<GridExcelExport FileName="Xuat_Kho_Raw_Data_Export" AllPages="true" />
								<GridCsvExport FileName="Xuat_Kho_Raw_Data_Export" AllPages="true" />
							</GridExport>
							<GridColumns>
								@if (CCache_Grid_UI_Global.List_Data_By_Code("2011", "grdData").Count > 0)
								{
									<FCommon_General_Col_Grid m_strFCode="2011" m_strTen_Grid="grdData"></FCommon_General_Col_Grid>
								}
								else
								{
									<GridColumn Field="Xuat_Kho_ID" Title="Xuất Kho" Width="100px"></GridColumn>
									<GridColumn Field="Ten_San_Pham" Title="Sản Phẩm" Width="100px"></GridColumn>
									<GridColumn Field="SL_Xuat" Title="Số lượng xuất" Width="100px"></GridColumn>
									<GridColumn Field="Don_Gia_Xuat" Title="Đơn Giá Xuất" Width="100px"></GridColumn>
									<GridColumn Field="" Title=""><FooterTemplate Context="Footer"></FooterTemplate></GridColumn>
								}
							</GridColumns>
						</TelerikGrid>
	

						<div class="tab-pane" id="record_action_history" role="tabpanel">
							<FCommon_Record_Action_History_List v_arrData="@m_arrRAH" />
						</div>
					</div>
				</div>
			</EditForm> 
		</div>
	</div>
</div>

@code {
	private CXNK_Xuat_Kho m_objXuat_Kho = new();
	private List<CLog_Record_Action_History> m_arrRAH = new();
	private List<CXNK_Xuat_Kho_Raw_Data> m_arrXuat_Kho_Raw_Data = new();
	private TelerikGrid<CXNK_Xuat_Kho_Raw_Data> m_grdData;

	protected override void Init_Data()
	{
		CCache_San_Pham.Load_Cache_DM_San_Pham();
	}

	protected override void Load_Data()
	{
		CXNK_Xuat_Kho_Controller v_objCtrXuat_Kho = new();
		CLog_Record_Action_History_Controller v_objCtrRAH = new();

		m_objXuat_Kho = v_objCtrXuat_Kho.FQ_728_XK_sp_sel_Get_By_ID(r_iAuto_ID);

		// m_arrRAH = v_objCtrRAH.FCommon_Sys_sp_sel_List_Log_Record_Action_History(r_iAuto_ID);

        CXNK_Xuat_Kho_Raw_Data_Controller v_objCtrXuat_Kho_Raw_Data = new();

		//Format lại grid đúng chuẩn, Đặt trước hàm load dữ liệu vì nó sẽ chạy nhanh hơn
		Format_Grid(m_grdData);

		if (r_iAuto_ID != 0)
		{
			m_arrXuat_Kho_Raw_Data = v_objCtrXuat_Kho_Raw_Data.F3003_sp_sel_List_XKRD_By_Xuat_Kho_ID(r_iAuto_ID);
			foreach (var item in m_arrXuat_Kho_Raw_Data)
			{
				item.Ten_San_Pham = CCache_San_Pham.Get_Data_By_ID(item.San_Pham_ID).Ten_San_Pham ?? "";
			}
		}
	}
}
