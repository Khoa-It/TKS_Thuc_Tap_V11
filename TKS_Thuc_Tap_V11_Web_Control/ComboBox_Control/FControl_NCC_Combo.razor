@inherits FBase_Combo;

<TelerikMultiColumnComboBox @bind-Value="@BindingValue"
							ScrollMode="@DropDownScrollMode.Virtual"
							Data="@m_arrData"
							ValueField="@(nameof(CDM_NCC.Auto_ID))"
							TextField="@(nameof(CDM_NCC.Ten_NCC))"
							Width="100%"
							PageSize="10"
							ItemHeight="35"
							Filterable="true"
							FilterOperator="@StringFilterOperator.Contains"
							ListHeight="260px">
	<MultiColumnComboBoxColumns>
		<MultiColumnComboBoxColumn Field="@nameof(CDM_NCC.Ten_NCC)" Title="@Get_Language_Data_Field("Nhà cung cấp")" Width="250px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
	</MultiColumnComboBoxColumns>
</TelerikMultiColumnComboBox>

@code {
	[Parameter]
	public List<CDM_NCC> m_arrData { get; set; } = new();

	protected override void Load_Data()
	{
		if (m_arrData.Count == 0 || m_arrData == null)
		{
			m_arrData = CCache_NCC.List_Data();
		}
	}
}
