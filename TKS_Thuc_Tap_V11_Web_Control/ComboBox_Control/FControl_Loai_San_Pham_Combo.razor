@inherits FBase_Combo;

<TelerikMultiColumnComboBox @bind-Value="@BindingValue"
							ScrollMode="@DropDownScrollMode.Virtual"
							Data="@m_arrData"
							ValueField="@(nameof(CDM_Loai_San_Pham.Auto_ID))"
							TextField="@(nameof(CDM_Loai_San_Pham.Ten_LSP))"
							Width="100%"
							PageSize="10"
							ItemHeight="35"
							Filterable="true"
							FilterOperator="@StringFilterOperator.Contains"
							ListHeight="260px">
	<MultiColumnComboBoxColumns>
		<MultiColumnComboBoxColumn Field="@nameof(CDM_Loai_San_Pham.Ten_LSP)" Title="@Get_Language_Data_Field("Loại sản phẩm")" Width="250px" Class="k-tks-combobox-item" HeaderClass="k-tks-combobox-header" />
	</MultiColumnComboBoxColumns>
</TelerikMultiColumnComboBox>

@code {
	[Parameter]
	public List<CDM_Loai_San_Pham> m_arrData { get; set; } = new();

	protected override void Load_Data()
	{
		Console.WriteLine("ham load data loai san pham");
		Console.WriteLine("da load duoc: " + m_arrData.Count + " dong");
		if (m_arrData.Count == 0 || m_arrData == null)
		{
			Console.WriteLine("vo dieu kien");
			m_arrData = CCache_Loai_San_Pham.List_Data();
		}
	}
}
