@inherits FBase;

@Layout_Default_Filter(m_grdData, "")
<div style="padding-top: 10px;"></div>

<div class="row">
	<div class="col-lg-12">
		@((MarkupString)r_strError)

		<TelerikGrid Data="@m_arrData" Height="calc(100vh - 170px)" Resizable="true" Reorderable="true" @ref="@m_grdData">
			<GridExport>
				<GridExcelExport FileName="Loai_San_Pham_Export" AllPages="true" />
				<GridCsvExport FileName="Loai_San_Pham_Export" AllPages="true" />
			</GridExport>
			<GridColumns>
				<GridCheckboxColumn SelectAll="true" CheckBoxOnlySelection="true" Width="30px"></GridCheckboxColumn>
				<GridColumn Width="60px">
					<Template>
						<button class="btn btn-link" @onclick="@(()=> Open_Info((context as CDM_Loai_San_Pham).Auto_ID))">
							<i class="mdi mdi-eye" style="color: purple;"></i>
						</button>
						&nbsp;
						<button class="btn btn-link" data-bs-toggle="dropdown" aria-expanded="false">
							<i class="mdi mdi-cog-outline" style="color: purple;"></i>
						</button>
						<ul class="dropdown-menu">
							@if (r_objChuc_Nang.Is_Have_Edit_Permission == true)
							{
								<li>
									<button class="dropdown-item" type="button" @onclick="@(()=> Open_Edit((context as CDM_Loai_San_Pham).Auto_ID))"><i class="ri-edit-2-line align-bottom me-1"></i> &nbsp; @Get_Language_Data_Field("Hiệu chỉnh")</button>
								</li>
							}
							@if (r_objChuc_Nang.Is_Have_Delete_Permission == true)
							{
								<li>
									<button class="dropdown-item" type="button" @onclick="@(()=> Delete_Data((context as CDM_Loai_San_Pham).Auto_ID))"><i class="ri-delete-bin-line align-bottom me-1"></i> &nbsp; @Get_Language_Data_Field("Xóa")</button>
								</li>
							}
						</ul>
					</Template>
				</GridColumn>
				@if (CCache_Grid_UI_Global.List_Data_By_Code("2002", "m_grdData").Count > 0)
				{
					<FCommon_General_Col_Grid m_strFCode="2002" m_strTen_Grid="m_grdData"></FCommon_General_Col_Grid>
				}
				else
				{
					<GridColumn Field="Ma_LSP" Title="Mã loại sản phẩm" Width="100px"></GridColumn>
					<GridColumn Field="Ten_LSP" Title="Tên loại sản phẩm " Width="200px"></GridColumn>
					<GridColumn Field="Ghi_Chu" Title="Ghi Chú" Width="200px"></GridColumn>
					<GridColumn Field="" Title=""><FooterTemplate Context="Footer"></FooterTemplate></GridColumn>
				}
			</GridColumns>
		</TelerikGrid>
	</div>
</div>

@if (r_bIs_Show_Info == true)
{
	<F2002_2_Loai_San_Pham_Info r_iAuto_ID="@r_iAuto_ID" OnClose="@Close_Info"></F2002_2_Loai_San_Pham_Info>
}

@if (r_bIs_Show_Help_Guide == true)
{
	<FCommon_Help_Guide m_strFCode="@r_strActive_Function_Code" OnClose="@Close_Helpguide"></FCommon_Help_Guide>
}

@if (r_bIs_Show_Edit == true)
{
	<F2002_3_Loai_San_Pham_Edit r_iAuto_ID="@r_iAuto_ID" OnClose="@Close_Edit"></F2002_3_Loai_San_Pham_Edit>
}

@code {
	public List<CDM_Loai_San_Pham> m_arrData = new();
	TelerikGrid<CDM_Loai_San_Pham> m_grdData = new();

	protected override void Init_Data()
	{

	}

	protected override void Load_Data()
	{
		CDM_Loai_San_Pham_Controller v_objCtrData = new();

		//Format lại grid đúng chuẩn, Đặt trước hàm load dữ liệu vì nó sẽ chạy nhanh hơn
		Format_Grid(m_grdData);

		m_arrData = v_objCtrData.FQ_122_LSP_sp_sel_List_By_Created(r_objFilter.Date_From, r_objFilter.Date_To);
	}

	protected override void Delete_Data_Entry(long p_iAuto_ID)
	{
		CDM_Loai_San_Pham_Controller v_objCtrData = new();

		// Đoạn code lưu key cho việc tracking log CRUD, vui lòng đừng xóa
		CDM_Loai_San_Pham v_objData = v_objCtrData.FQ_122_LSP_sp_sel_Get_By_ID(p_iAuto_ID);
		if (v_objData != null)
			r_strDelete_Key = v_objData.Ma_LSP;
		// End tracking

		v_objCtrData.FQ_122_LSP_sp_del_Delete_By_ID(p_iAuto_ID, r_strActive_User_Name, r_strActive_Function_Code);

		CCache_Loai_San_Pham.Delete_Data(p_iAuto_ID);
	}
}
